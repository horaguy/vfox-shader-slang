#!/usr/bin/env bash
#MISE description="Run plugin tests - install and execute tool"
set -euo pipefail

mise plugin link --force shader-slang .
mise cache clear
mise install shader-slang

if mise exec "shader-slang" -- "slangc" -v; then
    echo "✓ Tests passed"
else
    echo "✗ Test failed"
    exit 1
fi
